
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewBag.Title - Nieruchomości</title>

    @Styles.Render("~/Content/myCss")
    @Scripts.Render("~/bundles/myJS")

    <!-- Fonts and Icons -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,500,500i,700,700i,900,900i" rel="stylesheet">
    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">  
</head>

<body>
    <div>
        <header>
            <div class="container">
                <nav class="navbar navbar-inverse navbar-fixed-top">
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand" href="#">Nieruchomości.pl</a>
                        </div>
                        <div class="collapse navbar-collapse">
                            <ul class="nav navbar-nav navbar-right">
                                <li><a href="@Url.Action("Index", "Login")"> Zarządzaj ofertami</a></li>
                                <li class="message-new"><a href="@Url.Action("Index", "Login")"> <span class="message-num">2</span>Wiadomości</a></li>
                                <li><a class="btn" href="@Url.Action("Index", "Login")"> Wyloguj  <i class="ion-android-exit"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </header>
        <section style="margin-top: 100px">
            <div class="container">
                @RenderBody()
            </div>
        </section>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>

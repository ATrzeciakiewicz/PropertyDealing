@using PropertyDealing.Models
@model LoginViewModel

@using (Html.BeginForm("Login", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="input-group">
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email" })
        @*<input type="text" class="form-control" name="user" placeholder="Login">*@
        <span class="input-group-addon"><i class="ion-ios-person"></i></span>
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>
    <div class="input-group">
        @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Hasło" })
        @*<input type="password" class="form-control" name="pass" placeholder="Hasło">*@
        <span class="input-group-addon"><i class="ion-android-lock"></i></span>
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn">Zaloguj</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
